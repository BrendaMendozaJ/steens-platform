# ===== CONFIGURACIÓN DE APIS DE MODERACIÓN =====

# Perspective API (Google) - Para detección de toxicidad
NEXT_PUBLIC_PERSPECTIVE_API_KEY=your_perspective_api_key_here

# OpenAI API - Para moderación avanzada  
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# ===== CONFIGURACIÓN DE AWS (OPCIONAL PARA DEMO) =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Tablas de DynamoDB
MODERATION_LOGS_TABLE=steens-moderation-logs
REPORTS_TABLE=steens-user-reports

# ===== SALES DE SEGURIDAD =====
NEXT_PUBLIC_HASH_SALT=steens-secure-salt-2024-demo
NEXT_PUBLIC_USER_SALT=steens-user-salt-2024-demo
HASH_SALT=steens-report-salt-2024-demo

# Entorno
NODE_ENV=production